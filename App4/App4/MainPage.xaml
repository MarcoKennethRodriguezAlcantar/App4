<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Practica App4" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Uso de ICommands" FontSize="Title" Padding="30,10,30,10"/>

        <Label Text="{Binding CountConverted}"></Label>

        <Button Text="Dame click" Command="{Binding ButtonClickComand}"></Button>

        <Button Text="Reset" BackgroundColor="Yellow" Command="{Binding ResetClickCommand}"></Button>

    </StackLayout>

</ContentPage>
